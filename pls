            pub fn description(&self) -> &str 
            {
                match *self
                {
                    ErrorKind::Tag                       => "Tag",
                    ErrorKind::MapRes                    => "Map on Result",
                    ErrorKind::MapOpt                    => "Map on Option",
                    ErrorKind::Alt                       => "Alternative",
                    ErrorKind::IsNot                     => "IsNot",
