            /// Recognizes a signed 16 byte integer.
            #[inline]
            pub fn i128<I, E: ParseError<I>>( endian: number::Endianness ) -> fn(I) -> IResult<I, i128, E> where
            I: Slice<RangeFrom<usize>> + InputIter<Item = u8> + InputLength,
